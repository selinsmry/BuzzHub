# Backend Environment Variables - EXAMPLE
# Gerçek değerleri backend/.env dosyasına yazın

PORT=5000

# MongoDB Atlas Connection
# Kendi MongoDB URI'nizi yazın
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=BuzzHub

# JWT Secret for token generation
# Production'da güçlü ve rastgele bir şifre kullanın
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Node Environment
NODE_ENV=development
